<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
    PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
    "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
    <!-- 
   ID                     bigint not null auto_increment comment '预约咨询随机编号：系统生成',
   Name                   varchar(50)  comment '用户姓名',
   Gender                 char(1) comment '用户性别：1.男 2.女 ',
   MobilePhone			  char(20) '用户手机号',          
   Content                varchar(100) comment '预约咨询内容 ',
   CreateTime             datetime comment '创建时间：记录预约咨询的创建时间 ',
   -->
<mapper namespace="consult">
	<parameterMap id="consult" type="com.sw.plugins.clientcenter.reservation.consult.entity.Consult"/>
	
	<!-- 预约咨询结果集 -->
	<resultMap id="consultResult" type="com.sw.plugins.clientcenter.reservation.consult.entity.Consult">
		<id property="id" column="ID" />
		<result property="name" column="Name" />
		<result property="gender" column="Gender" />
		<result property="mobilePhone" column="MobilePhone" />
		<result property="state" column="State" />
		<result property="content" column="Content" />
		<result property="creator" column="Creator" />
		<result property="createTime" column="CreateTime" />
		<result property="modifyTime" column="ModifyTime" />
	</resultMap>

	<!-- 新建预约咨询 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterMap="consult">
		insert into CC_Consult
		<trim prefix="(" prefixOverrides="," suffix=")">
			<if test="name!=null and name!=''">,Name</if>
			<if test="gender!=null and gender!=''">,Gender</if>
			<if test="mobilePhone!=null and mobilePhone!=''">,MobilePhone</if>
			<if test="state!=null and state!=''">,State</if>
			<if test="content!=null and content!=''">,Content</if>
			,CreateTime
			,Creator
		</trim>
		values
		<trim prefix="(" prefixOverrides="," suffix=")">
			<if test="name!=null and name!=''">,#{name}</if>
			<if test="gender!=null and gender!=''">,#{gender}</if>
			<if test="mobilePhone!=null and mobilePhone!=''">,#{mobilePhone}</if>
			<if test="state!=null and state!=''">,#{state}</if>
			<if test="content!=null and content!=''">,#{content}</if>
			,
			<if test="databaseType!=null and databaseType == 'mysql'">
				now() 
			</if>
			<if test="databaseType!=null and databaseType == 'oracle'">
				sysdate
			</if>
			<if test="databaseType!=null and databaseType == 'sqlserver'">
				getdate() 
			</if>
			,${creator}
		</trim>
		<selectKey keyProperty="generatedKey" resultType="Long">
			<if test="databaseType!=null and databaseType == 'mysql'">
				select LAST_INSERT_ID() as generatedKey   
			</if>
			<if test="databaseType!=null and databaseType == 'oracle'">
				SELECT S_CC_CONSULT.CURRVAL AS VALUE FROM DUAL  
			</if>
			<if test="databaseType!=null and databaseType == 'sqlserver'">
				SELECT IDENT_CURRENT('CC_Consult')
			</if>
		</selectKey>
	</insert>
	
	<!-- 更新咨询 -->
	<update id="update" parameterMap="consult">
		update CC_Consult
		<set>			
			<trim prefixOverrides=",">
				<if test="name!=null and name!=''">,Name = #{name}</if>
				<if test="gender!=null and gender !=''">,Gender = ${gender}</if>
				<if test="mobilePhone!=null and mobilePhone!=''">,MobilePhone = #{mobilePhone}</if>
				<if test="content!=null">,Content=#{content}</if>
				<if test="state !=null">,State = ${state} </if>
				,
				<if test="databaseType!=null and databaseType == 'mysql'">
					ModifyTime=now() 
				</if>
				<if test="databaseType!=null and databaseType == 'oracle'">
					ModifyTime=sysdate
				</if>
				<if test="databaseType!=null and databaseType == 'sqlserver'">
					ModifyTime=getdate() 
				</if>
			</trim>
		</set>
		<where>
		 	<if test="id!=null and id!=''">
		 	 ID=${id}
			</if>
		</where>		
	</update>
	
	<!-- 更新咨询状态 -->
	<update id="updateStatus" parameterMap="consult">
		update CC_Consult
		<set>			
			<trim prefixOverrides=",">
				<if test="state !=null">,State = ${state} </if>
				,
				<if test="databaseType!=null and databaseType == 'mysql'">
					ModifyTime=now() 
				</if>
				<if test="databaseType!=null and databaseType == 'oracle'">
					ModifyTime=sysdate
				</if>
				<if test="databaseType!=null and databaseType == 'sqlserver'">
					ModifyTime=getdate() 
				</if>
			</trim>
		</set>
		<where>
		 	<if test="id!=null and id!=''">
		 	 ID=${id}
			</if>
		</where>		
	</update>
	
	<!-- 预约咨询通用查询 -->
	<select id="select" resultMap="consultResult" parameterMap="consult">
		select * from CC_Consult
		<where>
			<trim prefixOverrides="and">
				<if test="id!=null">
			 	 and ID = ${id}
				</if>
			 	<if test="name!=null and name!=''">
			 	 and Name=#{name}
				</if>
			 	<if test="mobilePhone!=null and mobilePhone!=''">
			 	 and MobilePhone=#{mobilePhone}
				</if>
			</trim>
		</where>
	</select>

	<!-- 预约咨询统计查询 -->
	<select id="selectCount" resultType="long" parameterMap="consult">
		select count(*) from CC_Consult
		<where>
			<trim prefixOverrides="and">
				<if test="state!=null">
				 and State=#{state}
				</if>
				<if test="name!=null and name!=''">
					<if test="databaseType!=null and databaseType == 'mysql'">
						and Name like CONCAT('%',#{name},'%')
					</if>
					<if test="databaseType!=null and databaseType == 'oracle'">
						and Name like '%'||#{name}||'%'  
					</if>
					<if test="databaseType!=null and databaseType == 'sqlserver'">
						and Name like '%'+#{name}+'%' 
					</if>
				</if>
			 	<if test="mobilePhone!=null and mobilePhone!=''">
			 	 	<if test="databaseType!=null and databaseType == 'mysql'">
						and MobilePhone like CONCAT('%',#{mobilePhone},'%')
					</if>
					<if test="databaseType!=null and databaseType == 'oracle'">
						and MobilePhone like '%'||#{mobilePhone}||'%'
					</if>
					<if test="databaseType!=null and databaseType == 'sqlserver'">
						and MobilePhone like '%'+#{mobilePhone}+'%' 
					</if>
				</if>
				<if test="databaseType!=null and databaseType == 'mysql'">
					<if test="starTime !=null and starTime!='' ">
					<![CDATA[and (CreateTime>=#{starTime})]]>
					</if>
					<if test="endTime !=null and endTime!='' ">
					<![CDATA[and ((CreateTime<=#{endTime}) or CreateTime like CONCAT('%',#{endTime},'%'))]]>
					</if>
				</if>
				<if test="databaseType!=null and databaseType == 'oracle'">
					<if test="starTime !=null and starTime!='' ">
					<![CDATA[and (CreateTime>=to_date(#{starTime},'YYYY-MM-DD'))]]>
					</if>
					<if test="endTime !=null and endTime!='' ">
					<![CDATA[and ((CreateTime<=to_date(#{endTime},'YYYY-MM-DD')) or CreateTime like '%'||to_date(#{endTime},'YYYY-MM-DD')||'%')]]>
					</if>
				</if>
				<if test="databaseType!=null and databaseType == 'sqlserver' ">
					<if test="starTime !=null and starTime!='' ">
					<![CDATA[and (CreateTime>=#{starTime}+' 00:00:00.000')]]>
					</if>
					<if test="endTime !=null and endTime!='' ">
					<![CDATA[and (CreateTime<=#{endTime}+' 23:59:59.999')]]>
					</if>
				</if>
			</trim>
		</where>
	</select>
	
	<!-- 预约咨询分页查询 -->
	<select id="selectPaginated" resultMap="consultResult" parameterMap="consult">
		<if test="databaseType!=null and databaseType == 'mysql'">
		select * from CC_Consult
		<where>
			<trim prefixOverrides="and">
				 State=${state}
				<if test="name!=null and name!=''">
					and Name like CONCAT('%',#{name},'%')
				</if>
			 	<if test="mobilePhone!=null and mobilePhone!=''">
			 	 	and MobilePhone like CONCAT('%',#{mobilePhone},'%')
				</if>
				<if test="starTime !=null and starTime!='' ">
					<![CDATA[and (CreateTime>=#{starTime})]]>
				</if>
				<if test="endTime !=null and endTime!='' ">
					<![CDATA[and ((CreateTime<=#{endTime}) or CreateTime like CONCAT('%',#{endTime},'%'))]]>
				</if>
			</trim>
		</where>
		order by id desc limit ${start},${offset}
		</if>
		<if test="databaseType!=null and databaseType == 'oracle'">
		select a.* from (	
		select t.*,ROWNUM rn from (
			select c.* from CC_Consult c 
			<where>
				<trim prefixOverrides="and">
				 State=${state}
				<if test="name!=null and name!=''">
					and Name like '%'||#{name}||'%'  
				</if>
			 	<if test="mobilePhone!=null and mobilePhone!=''">
			 	 	and MobilePhone like '%'||#{mobilePhone}||'%'
				</if>
				<if test="starTime !=null and starTime!='' ">
					<![CDATA[and (CreateTime>=to_date(#{starTime},'YYYY-MM-DD'))]]>
				</if>
				<if test="endTime !=null and endTime!='' ">
					<![CDATA[and ((CreateTime<=to_date(#{endTime},'YYYY-MM-DD')) or CreateTime like '%'||to_date(#{endTime},'YYYY-MM-DD')||'%')]]>
				</if>
				</trim>
			</where>
			order by c.id desc
		) t
		<where>
		<if test="offset!=null and offset!=''">
			<![CDATA[ROWNUM<=${offset}]]>
		</if>  
		</where>
		) a
		<where>
	      <if test="start!=null and start!=''">
	         <![CDATA[rn>=${start}]]>
	       </if>       
	    </where>					
	</if>
	<if test="databaseType!=null and databaseType == 'sqlserver'">
		select a.* from (
			select row_number() over(order by  Id desc
			) as rowNum, *
			from CC_Consult 
			<where>
				<trim prefixOverrides="and">
				 State=${state}
				<if test="name!=null and name!=''">
					and Name like '%'+#{name}+'%'
				</if>
			 	<if test="mobilePhone!=null and mobilePhone!=''">
			 	 	and MobilePhone like '%'+#{mobilePhone}+'%'
				</if>
				<if test="starTime !=null and starTime!='' ">
				<![CDATA[and (CreateTime>=#{starTime}+' 00:00:00.000')]]>
				</if>
				<if test="endTime !=null and endTime!='' ">
				<![CDATA[and (CreateTime<=#{endTime}+' 23:59:59.999')]]>
				</if>
				</trim>
			</where>) a
				where a.rowNum> ${start} and a.rowNum<![CDATA[<${offset}]]>
	</if>
	</select>

	<!-- 删除预约咨询 (真删除) -->
	<delete id="delete" parameterMap="consult">
		delete from CC_Consult where ID=${id}
	</delete>
</mapper>
